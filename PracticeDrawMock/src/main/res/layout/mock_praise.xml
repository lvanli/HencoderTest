<?xml version="1.0" encoding="utf-8"?>
<com.hencoder.hencoderpracticedrawmock.mock.praise.PraiseLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hencoder.hencoderpracticedrawmock.mock.praise.PraiseView
        android:id="@+id/praise_view_small"
        android:clickable="true"
        android:layout_width="60dp"
        android:layout_height="30dp" />

    <com.hencoder.hencoderpracticedrawmock.mock.praise.PraiseView
        android:id="@+id/praise_view_big"
        android:clickable="true"
        android:layout_width="300dp"
        android:layout_height="200dp" />

    <com.hencoder.hencoderpracticedrawmock.mock.praise.PraiseView
        android:id="@+id/praise_view"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/praise_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1099"
        android:hint="输入数字"
        android:inputType="number" />

    <EditText
        android:id="@+id/praise_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        android:hint="持续时间"
        android:inputType="number" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交"
        android:id="@+id/praise_button" />
</com.hencoder.hencoderpracticedrawmock.mock.praise.PraiseLayout>